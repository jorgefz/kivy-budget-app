MDScreen:

	MDGridLayout:
		rows: 2

		ScreenManager:
			id: screen_manager
			size_hint_y: None
			height: self.parent.height - rail.height
			transition: NoTransition()
			
			HomeScreen:
			GraphScreen:
			DataScreen:

		MDBottomNavigation:
			id: rail

			MDBottomNavigationItem:
				icon: "home"
				text: 'Overview'
				on_tab_release: screen_manager.current = 'Home'

			MDBottomNavigationItem:
				icon: "chart-line"
				text: 'Graphs'
				on_tab_release: screen_manager.current = 'Graphs'
			
			MDBottomNavigationItem:
				icon: "database"
				text: 'Data'
				on_tab_release: screen_manager.current = 'Data'

	#MDBoxLayout:
	#	orientation: 'vertical'
		
		

<HomeScreen>:
	name: "Home"
	datetime_label: datetime_label

	MDLabel:
		id: datetime_label
		text: root.date
		pos_hint: {"center_y": 0.94}
		halign: 'center'
		theme_text_color: "Primary"
		font_style: "H2"
		font_size: self.width * 0.08
	
	MDRelativeLayout:
		pos_hint: {'center_x': 0.5, 'center_y': 0.75}
		MDLabel:
			text: "Balance"
			pos_hint: {"center_y": 0.58}
			halign:'center'
			theme_text_color: "Primary"
			font_style: "H3"
			font_size: self.width * 0.10
		MDLabel:
			text: app.balance_text
			pos_hint: {"center_y": 0.5}
			halign:'center'
			theme_text_color: "Primary"
			font_style: "H2"
			font_size: self.width * 0.12

	MDRelativeLayout:
		pos_hint: {'center_x': 0.25, 'center_y': 0.55}
		MDLabel:
			text: "Income"
			pos_hint: {"center_y": 0.57}
			halign:'center'
			theme_text_color: "Primary"
			font_style: "H3"
			font_size: self.width * 0.08
		MDLabel:
			text: app.income_text
			pos_hint: {"center_y": 0.5}
			halign:'center'
			theme_text_color: "Custom"
			text_color: "#00FF00"
			font_style: "H2"
			font_size: self.width * 0.10

	MDRelativeLayout:
		pos_hint: {'center_x': 0.75, 'center_y': 0.55}
		MDLabel:
			text: "Expenses"
			halign: "center"
			pos_hint: {"center_y": 0.57, "center_x": 0.5}
			theme_text_color: "Primary"
			font_style: "H3"
			font_size: self.width * 0.08
		MDLabel:
			text: app.expenses_text
			pos_hint: {"center_y": 0.5, "center_x": 0.5}
			halign: "center"
			theme_text_color: "Custom"
			text_color: "#FF0000"
			font_style: "H2"
			font_size: self.width * 0.10
	
	MDRelativeLayout:
		pos_hint: {'center_x': 0.25, 'center_y': 0.3}
		MDLabel:
			text: "Profit"
			pos_hint: {"center_y": 0.55}
			halign:'center'
			theme_text_color: "Primary"
			font_style: "H3"
			font_size: self.width * 0.08
		MDLabel:
			text: app.profit_text
			pos_hint: {"center_y": 0.48}
			halign:'center'
			theme_text_color: "Custom"
			text_color: "#FFA500"
			font_style: "H2"
			font_size: self.width * 0.10

	DonutPlot:
		id: profit_donut
		pos_hint: {'center_x': 0.75, 'center_y': 0.3}
		adaptive_size: True
		size_hint: 0.8,0.8
		on_parent:
			self.set_theme('dark')
			self.clear()
			pct = 100.0 * (1.0 - app.profit / app.income)
			self.plot(pct, limits = [0,100], text = f"{int(pct)}%", \
			fontsize = self.width*0.3, color = "orange", textcolor = "w")
			self.show()

<GraphScreen>:
	name: "Graphs"
	dataset: app.dataset
	each_day: app.each_day
	theme_str: app.theme_str

	MDLabel:
		id: label_no_data
		text: ""
		pos_hint: {"center_x": 0.78,"center_y": 0.72}
		theme_text_color: "Primary"
		font_style: "H4"
		font_size: self.width * 0.07

	PlotWidget:
		id: balance_plot
		pos_hint:  {'center_x': 0.55, 'center_y': 0.7}
		adaptive_size: True
		size_hint: (1.1,0.5)

	MDLabel:
		text: "Balance over time"
		pos_hint: {"center_y": 0.95}
		halign: "center"
		theme_text_color: "Primary"
		font_style: "H4"

	MDRaisedButton:
		id: month_selection
		size_hint: None, None
        width: dp(100) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
		pos_hint: {'center_y': 0.35, 'center_x': 0.3}
		text: "All Year"
		font_size: 18
		on_release: root.month_dropdown.open()

	MDRaisedButton:
		id: year_selection
		size_hint: None, None
        width: dp(100) + (self.ids.lbl_txt.texture_size[0] - self.ids.lbl_txt.texture_size[0])
		pos_hint: {'center_y': 0.35, 'center_x': 0.7}
		text: "2022"
		font_size: 18
		on_release: root.year_dropdown.open()



<DataScreen>:
	id: data_screen
	name: "Data"
	dataset: app.dataset
	transaction_list: transaction_list
	date_label: topbar_date
	day_spent_label: day_money_spent

	MDGridLayout:
		id: data_screen_main_layout
		cols: 1
		rows: 3

		MDTopAppBar:
			id: topbar_date
			pos_hint: {"top": 1}
			elevation: 8
			# size_hint_y: dp(0.10)
			right_action_items: [["calendar-month", lambda x: root.show_date_picker(), "Choose date"]]

		MDRelativeLayout:
			size_hint_y: dp(0.25)
			md_bg_color: [0.9, 0.9, 0.9]

			MDLabel:
				id: day_money_spent
				text: app.sterling(12)
				text_size: self.width, None
    			size_hint: 1, None
				pos_hint: {"center_y": 0.65}
				halign: "center"
				#elevation: 5
				font_size: "45sp"
		
			MDLabel:
				id: day_money_spent_subtext
				text: "spent"
				adaptive_size: True
				pos_hint: {"center_x": 0.5, "center_y": 0.3}
				#elevation: 5
				font_size: "20sp"


		MDScrollView:
			scroll_wheel_distance: dp(15)
			do_scroll_x: False
			do_scroll_y: True
		
			MDGridLayout:
				id: transaction_list
				padding: 10,10
				spacing: 10,10
				size_hint_y: None
				height: self.minimum_height
				row_default_height: "55dp"




					
				
